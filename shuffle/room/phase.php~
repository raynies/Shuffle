<?php
//フェーズを進める
function ahead(){
	global $ary;
	global $id;
	$phase = $ary[3];
	$phase += 1;
	$ary[3] = $phase;
	//進んだらチャットに書き込み
	$current_kakikomi = array("段階が".intval($ary[3]-1)."から".$ary[3]."に進みました",date('Y/m/d H:i:s'));
	array_push($ary[999]["chatroom"],$current_kakikomi); 
	file_put_contents($id.".dat",serialize($ary));
}
//フェーズを戻す
function behind(){
	global $ary;
	global $id;
	$phase = $ary[3];
	$phase -= 1;
	$ary[3] = $phase;
	//進んだらチャットに書き込み
	$current_kakikomi = array("段階が".intval($ary[3]+1)."から".$ary[3]."に戻りました(推奨されない動作です)",date('Y/m/d H:i:s'));
	array_push($ary[999]["chatroom"],$current_kakikomi); 
	file_put_contents($id.".dat",serialize($ary));
}
?>